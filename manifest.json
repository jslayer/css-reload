{
    "name"             : "__MSG_appName__",
    "description"      : "__MSG_appDescription__",
    "version"          : "1.2.6",
    "manifest_version" : 2,
    "default_locale"   : "en",
    "background"       : {
        "page" : "background.html"
    },
    "permissions"      : [
        "tabs", "<all_urls>"
    ],
    "page_action"      : {
        "default_title" : "__MSG_pageActionTitle__",
        "default_icon"  : "icon-48.png"
    },
    "icons"            : {
        "19" : "icon-48.png",
        "48" : "icon-48.png"
    },
    "content_scripts"  : [
        {
            "matches" : ["<all_urls>"],
            "js"      : ["content_script.js"]
        }
    ],
    "commands"         : {
        "_execute_page_action" : {
            "suggested_key" : {
                "default" : "Ctrl+E",
                "mac"     : "Command+E"
            },
            "description"   : "CSS Reload"
        }
    }
}
